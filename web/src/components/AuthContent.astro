---
import { SignedIn, SignedOut } from "@clerk/astro/components";
import { UserButton } from "@clerk/astro/components";
---

<SignedOut>
  <div class="text-center py-12">
    <h1 class="text-3xl font-bold text-base-content">Recordatorio de reuniones</h1>
    <p class="mt-4 text-base-content/70">Lleva un registro de tu asistencia a las reuniones</p>
    <div class="mt-8">
      <a href="/registrarse" class="btn btn-primary">Registrarse</a>
    </div>
  </div>
</SignedOut>

<SignedIn>
  <div class="text-center py-12">
    <div class="flex flex-col items-center gap-4">
      <UserButton showName />
    </div>
  </div>
</SignedIn>
